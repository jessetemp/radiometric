{% extends "../index.njk" %}

{% block main %}
  <div class="grid">
    {% for row in range(0,6) %}
      <div class="row row-{{row}}">
        {% for col in range(0,4) %}
          <div id="cell-{{row}}-{{col}}" class="cell">
            <h1 class="symbol"></h1>
          </div>
        {% endfor %}
      </div>
    {% endfor %}
    <div id="backspace" class="cell disabled">
      <h1 class="symbol">&#9003;</h1>
    </div>
    <div id="enter" class="cell disabled">
      <h1 class="symbol">&crarr;</h1>
    </div>
  </div>
  <div class="table">
    {% for element in elements %}
      <div class="element {{element.name.toLowerCase()}} {{element.category}}">
        <p class="element-number">{{element.number}}</p>
        <h3 class="element-symbol">{{element.symbol}}</h3>
        <p class="element-name">{{element.name}}</p>
        {# <p class="element-category">{{element.category}}</p> #}
        <p class="atomic-mass">{{element.atomic_mass.toFixed(2)}}</p>
      </div>
    {% endfor %}
    <div class="spacer-a"></div>
    <div class="spacer-b">
    </div>
    <div class="element lanthanides"></div>
    <div class="element actinides"></div>
    <div class="spacer-c"></div>
  </div>

{% endblock %}